{
  "name": "yourname/flash-sale",
  "description": "Flash Sale Checkout (Concurrency & Correctness) - Minimal Laravel app",
  "type": "project",
  "require": {
    "php": "^8.1 || ^8.2 || ^8.3",
    "laravel/framework": "^12.0",
    "doctrine/dbal": "^3.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "fakerphp/faker": "^1.22"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "phpunit"
  }
}
